<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="W_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:W_Project"
    xmlns:Pages="clr-namespace:W_Project.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage"/>
    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate Pages:LoginPage}"
        Route="LoginPage"/>
    <ShellContent
        Title="ContentPage"
        ContentTemplate="{DataTemplate Pages:Contents}"
        Route="Contents"/>
    <ShellContent
        Title="LoadingPage"
        ContentTemplate="{DataTemplate Pages:LoadingPage}"
        Route="LoadingPage"/>
    <ShellContent
        Title="ListingPage"
        ContentTemplate="{DataTemplate Pages:ListingPage}"
        Route="ListingPage"/>

</Shell>
